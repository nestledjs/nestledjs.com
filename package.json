{
  "name": "nestledjs-docs",
  "version": "1.0.0",
  "description": "Official documentation website for Nestled.js - Nx generators for scalable full-stack applications",
  "private": false,
  "author": "Justin Handley",
  "license": "MIT",
  "homepage": "https://nestledjs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/nestledjs/nestledjs.com"
  },
  "bugs": {
    "url": "https://github.com/nestledjs/nestledjs.com/issues"
  },
  "keywords": [
    "nestled",
    "nestjs",
    "nx",
    "generators",
    "full-stack",
    "documentation",
    "react",
    "nextjs"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm run lint && pnpm run type-check && pnpm run build",
    "ci:local": "pnpm run ci:quality && pnpm run ci:security",
    "ci:quality": "echo 'ğŸ” Running Quality Checks...' && pnpm run lint && pnpm run type-check && pnpm run format:check && pnpm run build",
    "ci:security": "echo 'ğŸ”’ Running Security Checks...' && pnpm audit --audit-level=high && pnpm outdated || true",
    "ci:smoke-test": "echo 'ğŸš€ Running Smoke Test...' && pnpm run ci:start-and-test",
    "ci:start-and-test": "concurrently --kill-others --success=first \"pnpm start\" \"pnpm run ci:wait-and-curl\"",
    "ci:wait-and-curl": "sleep 10 && curl -f -s -o /dev/null http://localhost:3000 && echo 'âœ… Smoke test passed!'"
  },
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@algolia/autocomplete-core": "^1.19.6",
    "@headlessui/react": "^2.2.9",
    "@markdoc/markdoc": "^0.4.0",
    "@markdoc/next.js": "^0.3.4",
    "@sindresorhus/slugify": "^2.1.0",
    "@tailwindcss/postcss": "~4.1.7",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-highlight-words": "^0.20.1",
    "clsx": "^2.1.0",
    "fast-glob": "^3.2.12",
    "flexsearch": "^0.7.31",
    "js-yaml": "^4.1.1",
    "next": "^15.0.0",
    "next-themes": "^0.4.0",
    "prism-react-renderer": "^2.0.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-highlight-words": "^0.21.0",
    "simple-functional-loader": "^1.2.1",
    "tailwindcss": "~4.1.7",
    "typescript": "~5.8.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sharp": "^0.34.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "tar": ">=7.5.8",
      "glob": ">=10.5.0",
      "lodash": ">=4.17.23",
      "minimatch": ">=10.2.1"
    }
  }
}
